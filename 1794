#include <iostream>
#include <vector>

int main() 
{
    int N;
    //вводим количество учеников
    std::cin >> N;
    //создаем и формируем массив голосов детей
    std::vector<int> children(N);
    for (int i = 0; i < N; i++) {
        std::cin >> children[i];
    }

    //создаем массив для определения за кого больше всех голосов
    //в нем храниться количество проголосовавших за каждого
    //начинается с 1
    std::vector<int> votes(N + 1);

    //проходим по голосам каждого ребенка
    for (int i = 0; i < N; i++) {

        //проверяем голос ученика и проверяем на кого выпало право отвечать первым
       
        if (d < 0) {
            //если отрицательное значение прибавляем количесвто
            //тогда d будет являться индексом ребенка, кому предстоит первым отвечать
            //(это осуществляется ввиду того, что дети сидят в круг)
            d += N;
        }
        //записываем в массив, сколько проголосовало за того или иного ребенка
        votes[1 + d]++;
    }

    int result = 1;
    int result_max = votes[1];
    //проходим по массиву и ищем наибольшее значение
    //когда находим выводим индекс он и будет номером ученика
    for (int i = 2; i <= N; i++) {
        if (result_max < votes[i]) {
            result_max = votes[i];
            result = i;
        }
    }

    std::cout << result << std::endl;

    return 0;
}

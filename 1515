#include<iostream>


int main()
{
	//номинал и количество купюр
	int answer = 0, n;
	std::cin >> n;

	for (int i = 0; i < n; i++)
	{
		//вводим существующие номиналы
		int x;
		std::cin >> x;
		//если первый номинал больше 1, то 
		//ответом будет единица, т.к. она является наименьшим числом
		if (x > answer + 1)
		{
			std::cout << answer + 1;
			return 0;
		}
		//иначе мы суммируем существующие номиналы и потом когда заново заходим в цикл проверяем
		//есть ли в промежутке между суммой и следующим числом не задействованные номиналы,
		//которые будут наименьшими и не будут равны сумме
		else
		{
			answer += x;
		}
	}
	//если мы прошли цикл и не нашли ни одного нужного числа, то выводим
	//следующее за суммой число
	std::cout << answer + 1;
	return 0;
}
